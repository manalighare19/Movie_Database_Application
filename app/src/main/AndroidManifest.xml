<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.manalighare.hw03">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".add_movie" />
        <activity android:name=".edit_movie" />
        <activity android:name=".movies_by_year">
            <intent-filter>
                <action android:name="com.example.manalighare.hw03.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".movies_by_rating">
            <intent-filter>
                <action android:name="com.example.manalighare.hw03.intent.action.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
    </application>

</manifest>